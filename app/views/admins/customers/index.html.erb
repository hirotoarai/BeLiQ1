<body class="splash">
  <div class="container">
    <h3>会員一覧</h3>
    <div class="row">
      <div class="col-xs-12">
         <div class="profile">
           <table class="table">
          	<tbody>
          		<% @users.each do |user| %>
          		<tr>
          			<td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb", size:'80x80' %>
          			    <%= link_to user.name, user_path(user) %></td>

    					   <td>最終投稿日:<%= user.updated_at.strftime("%Y-%m-%d") %></td>

          		</tr>
          		<% end %>
          	</tbody>
          </table>
          <div class="text-center">
            <h4><%= paginate @users %></h4>
          </div>
         </div>
      </div>
    </div>
  </div>

  <div class="container">
    <table class="table">
      <tbody>
        <h3>記事　いいね数ランキング</h3>
      <% @all_ranks.each.with_index(1) do |post, i| %>
        <tr>
          <td><h4>第
          <%= i %>
            位
          <%= link_to post.title, post_path(post) %><h4></td>

          <td>投稿日:<%= post.updated_at.strftime("%Y-%m-%d") %></td>
		      <td>
		        <i class="glyphicon glyphicon-thumbs-up"></i>
            <%= post.favorites.count %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</body>
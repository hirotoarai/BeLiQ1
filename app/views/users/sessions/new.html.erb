<body>
  <div class="container">
    <h3>ログイン</h3>
      <div class="row">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <h4></h4>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", include_blank: "名前" %>
            </div>

            <div class="field">
              <h4></h4>
              <%= f.password_field :password, autocomplete: "current-password", include_blank: "パスワード" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :パスワードを保存する %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログインする" %>
            </div>
          <% end %>
       </div>
      </div>
  </div>
</body>

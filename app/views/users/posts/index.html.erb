<body>
  <div class="container">
    <h3>投稿一覧</h3>
    <div class="row">
      <div class="col-xs-3">
      </div>

      <div class="col-xs-9">
        <table class="table">
          <tbody>
            <% @posts.each do |post| %>
    				<tr>
    				  <td>
    				    </br>
                <h4><%= post.category %></h4>
    				  </td>

    					<td>
    					  投稿日:<%= post.updated_at.strftime("%Y-%m-%d") %>
                <%= link_to post_path(post), class: "post_#{post.id}" do %>
                  <h4><%= post.title %></h4>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="text-center">
        <h4><%= paginate @posts %></h4>
      </div>
    </div>
  </div>
</body>
<body>
  <div class="container">
    <h3>投稿編集</h3>

    <div class="row">
      <div class="col-xs-3">
        <div class="profile-image">
          <table class="table">
            <tbody>
              <tr>
                <%= @user.name %>
                <%= attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb", size:'100x100', id:"profile_image") %>
                <td>・<%= @user.introduction %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-xs-8">
        <%= form_with model: @post, local: true do |f| %>
          <div class="form-group">
            <%= f.select :category, [["質問", "質問"], ["投稿", "投稿"]], include_blank: "カテゴリを選択して下さい" %>
          </div>
          <div class="form-group">
            <%= f.text_field :title, placeholder: "タイトル", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_area :body, size: "100x12", placeholder: "内容をここに記入する", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_field :tag_name,value: @tag_list, placeholder: "タグを追加", class: "form-control" %>
          </div>
          <h4>画像投稿フォーム</h4>
            <%= f.attachment_field :post_image %>
          <h4></h4>
            <%= f.submit '編集する' %>
        <% end %>
      </div>
    </div>
  </div>
</body>
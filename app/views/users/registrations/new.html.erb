<body>
  <section class="slice slice-lg sct-color-1">
    <div class="container">
      <div class="saito">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <div class="form-user style-1 rounded has-shadow-1">
              <div class="form-header text-center">
                  <h2 class="form-header-title">新規登録</h2>
              </div>
              <div class="form-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "users/shared/error_messages", resource: resource %>

                  <div class="form-group">
                    <%= f.text_field :name, size: "50x12", autofocus: true, autocomplete: "name", placeholder: "名前", class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                    <%= f.password_field :password, size: "50x12", autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password_confirmation, size: "50x12", autocomplete: "new-password", placeholder: "確認用パスワード", class: "form-control" %>
                  </div>

                  <div class="actions text-center">
                    <%= f.submit "新規登録する", class: "btn btn-primary" %>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
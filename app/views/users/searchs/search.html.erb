<body>
  <div class="container">
    <h3>投稿検索　結果</h3>
    <%= render 'users/searchs/form' %>
    <div class="row">
  		<div class="col-xs-12">
        <table class="table">
          <tbody>
          <% if @posts %>
    				<% @posts.each do |post| %>
    				<tr>
    				  <td>
    				    <%= post.user.name %>
                <%= attachment_image_tag post.user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb", size: "80x80" %>
    					</td>

    					<td>
					      </br>
					      <h4><%= post.category %></h4>
					    </td>

    					<td>
    					  投稿日:<%= post.updated_at.strftime("%Y-%m-%d") %>
    					  <div class="col-xs-1 col-xs-offset-1">
  					      <i class="glyphicon glyphicon-thumbs-up"></i>
                  <%= post.favorites.count %>
                </div>
                <%= link_to post_path(post), class: "post_#{post.id}" do %>
                <h4><%= post.title %></h4>
                <% end %>
              </td>
            </tr>
    				<% end %>
  				<% end %>
  				</tbody>
  		  </table>
  		  <div class="text-center">
          <h4><%= paginate @post %></h4>
        </div>
  		</div>
    </div>
  </div>
</body>
<body>
  <div class="container">
    <div class="saito">
      <h3><%= @posts.first.user.name %>さんの投稿一覧</h3>
      <%= render 'users/searchs/form' %>
      <div class="row">
        <div class="col-xs-12">
          <table class="table table-hover table-inverse">
            <tbody>

              <% @posts.each do |post| %>
      				<tr>
      				  <td>
                  <%= link_to user_posts_path(post.user_id) do %>
                    <div class="img_wrap">
      				        <p><%= post.user.name %></p>
                      <%= attachment_image_tag post.user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb", size: "80x80" %>
                    </div>
    					    <% end %>
    					  </td>

    					  <td>
    					    </br>
    					    <h4><ol><%= post.category %></ol></h4>
    					  </td>

      					<td>
      					  キーワード：
                    <% post.tags.each do |tag| %>
                      <h7><%= tag.tag_name %></h7>
                    <% end %>
    					    <div class="col-xs-2 col-xs-offset-1">
    					      <i class="glyphicon glyphicon-thumbs-up"></i>
                    <%= post.favorites.count %>
                  </div>
                  <div class="col-xs-3">
                    投稿日:<%= post.updated_at.strftime("%Y-%m-%d") %>
                  </div>
                  <%= link_to post_path(post), class: "post_#{post.id}" do %>
                    <div class="img_wrap">
                      <h4></br><%= post.title %></h4>
                    </div>
                  <% end %>
                </td>
              </tr>
              <% end %>

            </tbody>
          </table>
          <div class="text-center">
            <h4><%= paginate @post %></h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
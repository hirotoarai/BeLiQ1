<body>
  <div class="container">
    <h3>マイページ</h3>
    <div class="row">
      <div class="col-xs-3">
         <div class="profile">
           <table class="table">
             <%# if admin_signed_in? && request.path.include?("admin") %>
              	<tr><%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb", size: "100x100" %></tr>

              	<tr>
              		<th>名前</th>
              		<th><%= @user.name %></th>
              	</tr>

              	<tr>
              		<th>紹介文</th>
              		<th><%= @user.introduction %></th>
              	</tr>

              	<tr>
              	  <%# if @user == current_user %>
              		<th><%= link_to "プロフィールを編集する", edit_user_path(@user), data: {"turbolinks" => false} %></th>
              	  <%# end %>
              	</tr>

              	<tr>
              		<th><%= link_to "退会する", confirm_unsubscribe_path(@user) %></th>
              	</tr>
             <%# end %>
          </table>
         </div>
      </div>

      <div class="col-xs-9">
        <% if flash[:notice] %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <%= form_with model: @post_new, local: true do |f| %>
          <h4></h4>
            <%= f.select :category, [["質問", "質問"], ["投稿", "投稿"]], include_blank: "カテゴリを選択して下さい" %>
          <h4></h4>
            <%= f.text_field :title, placeholder: "タイトル" %>
          <h4></h4>
            <%= f.text_area :body, size: "100x12", placeholder: "内容をここに記入する" %>
          <h4></h4>
            <%= f.text_field :tag_name, placeholder: "タグを追加" %>
          <h4>画像投稿フォーム</h4>
            <%= f.attachment_field :post_image %>
          <h4></h4>
            <%= f.submit '投稿する' %>
        <% end %>
      </div>
    </div>
  </div>
</body>
<body>
  <div class="container">
    <h3>マイページ</h3>
    <div class="row">
      <div class="col-xs-3">
        <div class="profile">
          <table class="table">
          	<tr><%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb", size: "100x100" %></tr>

          	<tr>
          		<th>
          		  名前:<%= @user.name %>
          		</th>
          	</tr>

          	<tr>
          		<th>
          		  紹介文:<%= @user.introduction %>
          		</th>
          	</tr>

          	<tr>
          		<th><%= link_to "プロフィールを編集する", edit_user_path(@user), data: {"turbolinks" => false} %></th>
          	</tr>

          	<tr>
          		<th><%= link_to "退会する", confirm_unsubscribe_path(@user) %></th>
          	</tr>
          </table>
        </div>
      </div>

      <div class="col-xs-8">
        <% if flash[:notice] %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <%= form_with model: @post_new, local: true do |f| %>
          <div class="form-group">
            <%= f.select :category, [["質問", "質問"], ["投稿", "投稿"]], include_blank: "カテゴリを選択して下さい" %>
          </div>
          <div class="form-group">
            <%= f.text_field :title, placeholder: "タイトル", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_area :body, size: "100x12", placeholder: "内容をここに記入する", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_field :tag_name, placeholder: "タグを追加", class: "form-control" %>
          </div>
          <h4>画像投稿フォーム</h4>
            <%= f.attachment_field :post_image %>
          <h4></h4>
            <%= f.submit '投稿する' %>
        <% end %>
      </div>
    </div>
  </div>
</body>